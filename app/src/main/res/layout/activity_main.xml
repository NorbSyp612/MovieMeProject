<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="0dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/colorPrimaryLight"
        android:clipToPadding="false"
        android:elevation="6dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/category_Fav"
                layout="@layout/movie_category_favorites"
                android:elevation="15dp" />

            <include
                android:id="@+id/category_Pop"
                layout="@layout/movie_category_most_pop" />

            <include
                android:id="@+id/category_Top"
                layout="@layout/movie_category_top" />

            <include
                android:id="@+id/category_Action"
                layout="@layout/movie_category_action" />

            <include
                android:id="@+id/category_Adventure"
                layout="@layout/movie_category_adventure" />

            <include
                android:id="@+id/category_Comedy"
                layout="@layout/movie_category_comedy" />

            <include
                android:id="@+id/category_History"
                layout="@layout/movie_category_history" />

            <include
                android:id="@+id/category_Horror"
                layout="@layout/movie_category_horror" />

            <include
                android:id="@+id/category_Drama"
                layout="@layout/movie_category_drama" />

            <include
                android:id="@+id/category_Fantasy"
                layout="@layout/movie_category_fantasy" />

            <include
                android:id="@+id/category_Mystery"
                layout="@layout/movie_category_mystery" />

            <include
                android:id="@+id/category_Romance"
                layout="@layout/movie_category_romance" />

            <include
                android:id="@+id/category_SciFi"
                layout="@layout/movie_category_scifi" />

            <include
                android:id="@+id/category_Thriller"
                layout="@layout/movie_category_thriller" />

            <include
                android:id="@+id/category_Western"
                layout="@layout/movie_category_western" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movie_items"
        android:layout_marginTop="115dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/refresh_fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="bottom|end"
        android:background="@color/colorAccent"
        android:elevation="6dp"
        android:onClick="onFabClicked"
        android:stateListAnimator="@animator/fab_state_list_anim"
        app:pressedTranslationZ="6dp" />


</FrameLayout>